<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name = "bg">
        <item name = "android:background">@color/main_black</item>
    </style>

    <style name = "text">
        <item name = "android:textColor">@color/white</item>
    </style>

    <style name = "button">
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>


    //테두리 있는 Text View, Center
    <style name = "textview_center">
        <item name = "android:background">@drawable/square_background_border</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name = "textview">
        <item name = "android:background">@drawable/square_background_border</item>
        <item name = "android:textColor">@color/white</item>
    </style>

    //테두리 없는 Text View, center
    <style name = "textview_2">
        <item name = "android:textColor">@color/white</item>
    </style>

    <style name = "textview_center_2">
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/white</item>
    </style>



    <style name = "line_horizon">
        <item name = "android:background">@color/main_white</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">3dp</item>
    </style>

    <style name = "line_vertical">
        <item name = "android:background">@color/main_white</item>
        <item name = "android:layout_width">3dp</item>
        <item name = "android:layout_height">0dp</item>
    </style>



</resources>