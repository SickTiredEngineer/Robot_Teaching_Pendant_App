<?xml version="1.0" encoding="utf-8"?>
<resources>

    //DarkMode 에서 사용할 Theme 을 정의하는 리소스 파일입니다.


    //Button 의 기본 Style
    <style name = "style_button">
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>

    //TextView 스타일로 테두리를 가지고 있습니다. tvc는 글자가 중앙에 위치합니다.
    <style name = "style_tvc">
        <item name = "android:background">@drawable/square_background_border</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name = "style_tv">
        <item name = "android:background">@drawable/square_background_border</item>
        <item name = "android:textColor">@color/white</item>
    </style>

    //TextView 스타일로 (2)가 붙으면 테두리가 존재하지 않습니다.
    <style name = "style_tv2">
        <item name = "android:textColor">@color/white</item>
    </style>

    <style name = "style_tvc2">
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/white</item>
    </style>


    //기본적으로 사용하게 될 Background 스타일 입니다.
    <style name = "style_bg">
        <item name = "android:background">@drawable/square_background_border</item>
    </style>

    //기본적으로 사용하레 될 TextColor 입니다.
    <style name = "style_text_color">
        <item name = "android:textColor">@color/white</item>
    </style>

    //enable, disable 버튼은 Night 모드 구현할 필요를 느끼지 못하여 아직 추가하지 않았습니다.

    /* 활성화 된 버튼을 초록색으로 표현한 스타일 입니다 */
    <style name = "style_enable_bt">
        <item name="android:background">@drawable/color_green_box</item>
        <item name="android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>

    //비활성화 된 버튼을 회색 배경으로 표현한 스타일 입니다.
    <style name = "style_disable_bt">
        <item name="android:background">@drawable/color_gray_box</item>
        <item name="android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>

    //좌측 상단에 위치한 UI  이동에 사용하는 Menu 버튼의 스타일 입니다.
    <style name = "style_menu_bt">
        <item name = "android:textSize">20sp</item>
        <item name = "android:text">@string/str_menu</item>
        <item name = "android:layout_width">100dp</item>
        <item name = "android:layout_height">50dp</item>
        <item name = "android:background">@drawable/public_button</item>
    </style>

    //우측 하단 공용 파워 버튼 디자인
    <style name = "style_power_bt">
        <item name = "android:layout_width">50dp</item>
        <item name = "android:layout_height">50dp</item>
        <item name = "android:background">@drawable/public_button</item>
    </style>


    //우측 상단 파일 관련(저장, 불러오기 등) 버튼 디자인
    <style name = "style_file_menu">
        <item name = "android:layout_width">120dp</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:textSize">20sp</item>
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>



    // 가로 선 디자인
    <style name = "style_line_h">
        <item name = "android:background">@color/white</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">3dp</item>
    </style>

    //세로 선 디자인
    <style name = "style_line_v">
        <item name = "android:background">@color/main_white</item>
        <item name = "android:layout_width">3dp</item>
        <item name = "android:layout_height">0dp</item>
    </style>


