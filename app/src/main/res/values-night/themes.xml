<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Robot_Teaching_Pendant_App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

        <!-- DARK Mode Style -->
        <style name = "bg">
            <item name = "android:background">@color/main_black</item>
        </style>

        <style name = "text">
            <item name = "android:textColor">@color/white</item>
        </style>

        <style name = "line">
            <item name = "android:background">@color/main_white</item>
        </style>

    <style name = "button">
        <item name = "android:background">@drawable/public_button_night</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name = "textview">
        <item name = "android:background">@drawable/square_background_border_white</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:gravity">center</item>
    </style>


    <style name="Theme.Robot_Teaching_Pendant_App" parent="Base.Theme.Robot_Teaching_Pendant_App" />
</resources>