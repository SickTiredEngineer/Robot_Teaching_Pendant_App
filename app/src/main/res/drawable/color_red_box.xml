<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/red" /> <!-- 배경색 -->
                <stroke android:color="@color/main_black" android:width="2dp" /> <!-- 테두리 선 색상 및 너비 -->
                <corners android:radius="0dp" /> <!-- 모서리 둥글게 처리 (원하는 값으로 설정) -->
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
