<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green" /> <!-- 버튼을 눌렀을 때의 배경색 -->
            <stroke android:color="@color/color_frame" android:width="1dp" /> <!-- 테두리 선 색상 및 너비 -->
            <corners android:radius="0dp" /> <!-- 모서리 둥글게 처리 -->
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/disable_color" />
            <stroke android:color="@color/color_frame" android:width="2dp" /> <!-- 테두리 선 색상 및 너비 -->
            <corners android:radius="0dp" /> <!-- 모서리 둥글게 처리 -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_bg" /> <!-- 기본 배경색 -->
            <stroke android:color="@color/color_frame" android:width="2dp" /> <!-- 테두리 선 색상 및 너비 -->
            <corners android:radius="0dp" /> <!-- 모서리 둥글게 처리 -->
        </shape>
    </item>

</selector>
