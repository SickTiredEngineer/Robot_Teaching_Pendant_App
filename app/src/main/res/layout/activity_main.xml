<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_make_bt"
        style="@style/WHITE_BUTTON"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_marginTop="220dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/main_make_bt_text"
        android:textSize="30dp"

        app:cornerRadius="0dp"

        app:layout_constraintBottom_toTopOf="@+id/main_play_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/main_play_bt"

        style="@style/WHITE_BUTTON"
        android:layout_width="500dp"
        android:layout_height="150dp"

        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="3dp"

        android:text="@string/main_play_bt_text"
        android:textSize="30dp"

        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/main_setup_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_make_bt"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/main_setup_bt"

        style="@style/WHITE_BUTTON"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"

        android:text="@string/main_setup_bt_text"
        android:textSize="30dp"
        app:cornerRadius="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_play_bt"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/main_title"

        android:layout_width="460dp"
        android:layout_height="86dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="396dp"
        android:gravity="center"

        android:text="@string/main_title_text"
        android:textColor="@color/BLACK"

        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/main_dark_bt"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="150dp"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/dark_mode_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/main_power_bt"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

</androidx.constraintlayout.widget.ConstraintLayout>