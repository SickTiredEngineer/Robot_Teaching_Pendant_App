<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <ScrollView
        android:layout_width="669dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/searchBox"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/main_frame"
                android:hint="검색할 기능을 입력하세요."
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/main_frame">

                <LinearLayout

                    android:id="@+id/linearLayout4"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_frame"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/def_all_bt"
                        style="@style/style_button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/str_all" />

                    <Button
                        android:id="@+id/def_move_bt"
                        style="@style/style_button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/str_move" />

                    <Button
                        android:id="@+id/def_func_bt"
                        style="@style/style_button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/str_func" />

                    <Button
                        android:id="@+id/def_other_bt"
                        style="@style/style_button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="@string/str_other" />

                </LinearLayout>

                <ScrollView
                    android:id="@+id/def_icon_view"
                    style="@style/style_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <GridLayout
                        android:id="@+id/grid_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:columnCount="6"
                        android:padding="5dp" />
                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/jog_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style = "@style/style_bg">

                <LinearLayout
                    android:id="@+id/jog_mode_layout"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/jog_global_bt"
                        style="@style/style_jog_choice"
                        android:src="@drawable/bt_global_jog_icon"
                        android:text="@string/str_global" />

                    <ImageButton
                        android:id="@+id/jog_local_bt"
                        style="@style/style_jog_choice"
                        android:src="@drawable/bt_local_jog_icon"
                        android:text="@string/str_local" />

                    <ImageButton
                        android:id="@+id/jog_user_bt"
                        style="@style/style_jog_choice"
                        android:src="@drawable/bt_user_jog_icon"
                        android:text="@string/str_user" />

                    <ImageButton
                        android:id="@+id/jog_joint_bt"
                        style="@style/style_jog_choice"
                        android:src="@drawable/bt_joint_jog_icon"
                        android:text="@string/str_joint" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jog_3d_view"
                    android:layout_width="190dp"
                    android:layout_height="335dp"
                    style = "@style/style_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/view_3d_ex" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/jog_controller_view"
                    style = "@style/style_bg"
                    android:layout_width="190dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <LinearLayout

                    android:id="@+id/linearLayout2"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_frame"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/roboinfo" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                style ="@style/style_bg"
                android:layout_marginTop="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_frame">

                    <Button
                        android:id="@+id/make_smooth_bt"
                        style="@style/style_button"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="33dp"
                        android:text="@string/str_smooth"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/jog_mode_tv" />

                    <Button
                        android:id="@+id/make_tick_bt"
                        style="@style/style_button"
                        android:layout_width="120dp"
                        android:layout_height="30dp"

                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="33dp"
                        android:text="@string/str_tick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/make_smooth_bt" />

                    <EditText
                        android:id="@+id/tick_dist"
                        style="@style/style_jogmode_edtx"

                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="6dp"
                        android:autofillHints="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/tick_ori"
                        style="@style/style_jogmode_edtx"

                        android:layout_marginBottom="6dp"
                        android:autofillHints="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tick_joint"
                        app:layout_constraintStart_toEndOf="@+id/tick_dist" />

                    <EditText
                        android:id="@+id/tick_joint"
                        style="@style/style_jogmode_edtx"

                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="6dp"
                        android:autofillHints="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/jog_mode_tv"
                        style="@style/style_tvc2"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="53dp"
                        android:text="@string/str_mode"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/jog_mode_tv1"
                        style="@style/style_jogmode_tx"

                        android:layout_marginStart="10dp"
                        android:text="@string/str_dist_mm"
                        app:layout_constraintBottom_toTopOf="@+id/tick_dist"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/jog_mode_tv2"
                        style="@style/style_jogmode_tx"

                        android:layout_marginTop="18dp"
                        android:text="@string/str_ori_dgr"
                        app:layout_constraintBottom_toTopOf="@+id/tick_ori"
                        app:layout_constraintEnd_toStartOf="@+id/jog_mode_tv3"
                        app:layout_constraintStart_toEndOf="@+id/jog_mode_tv1"
                        app:layout_constraintTop_toBottomOf="@+id/make_tick_bt" />

                    <TextView
                        android:id="@+id/jog_mode_tv3"
                        style="@style/style_jogmode_tx"

                        android:layout_marginEnd="10dp"
                        android:text="@string/str_joint_dgr"
                        app:layout_constraintBottom_toTopOf="@+id/tick_joint"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/make_estop_bt"
                        style="@style/style_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_EStop" />

                    <ImageButton
                        android:id="@+id/make_qhome_bt"
                        style="@style/style_button"
                        android:src="@drawable/bt_home_icon"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_qHome" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>