<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="300dp"
    style = "@style/bg">

    <TextView
        android:id="@+id/textView1"
        style="@style/textview_center_2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/coord_x"

        android:textColor="@color/red"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x_view"
        style = "@style/textview_center"
        android:textSize="11sp"

        android:layout_width="90dp"
        android:layout_height="25dp"
        android:text="0.00"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="25dp" />

    <Button
        android:id="@+id/x_plus_bt"
        style = "@style/plus_button"

        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="@string/plus_bt"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp" />

    <Button
        android:id="@+id/x_minus_bt"
        style = "@style/minus_button"
        android:text="@string/minus_bt"
        android:layout_width="50dp"
        android:layout_height="25dp"

        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="25dp" />


</androidx.constraintlayout.widget.ConstraintLayout>