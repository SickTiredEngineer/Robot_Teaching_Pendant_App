<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_bg">

    <View
        android:id="@+id/make_line1"
        style="@style/style_line_h"

        android:layout_width="0dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/make_line2"
        style="@style/style_line_h"

        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/make_menu_bt"
        style="@style/style_menu_bt"

        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/make_save_bt"
        style="@style/style_file_menu"
        android:text="@string/str_save"


        app:layout_constraintBottom_toTopOf="@+id/make_line2"
        app:layout_constraintEnd_toStartOf="@+id/make_save_as_bt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/make_load_bt"
        style="@style/style_file_menu"
        android:text="@string/str_load"

        app:layout_constraintBottom_toTopOf="@+id/make_line2"
        app:layout_constraintEnd_toStartOf="@+id/make_save_bt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/make_save_as_bt"
        style="@style/style_file_menu"
        android:text="@string/str_save_as"


        app:layout_constraintBottom_toTopOf="@+id/make_line2"
        app:layout_constraintEnd_toStartOf="@+id/make_new_bt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/make_new_bt"
        style="@style/style_file_menu"

        android:layout_marginEnd="90dp"
        android:text="@string/str_new"


        app:layout_constraintBottom_toTopOf="@+id/make_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/make_power_bt"
        style="@style/style_power_bt"

        android:contentDescription="@string/str_power_bt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

    <TextView
        android:id="@+id/make_pname_view"
        style="@style/style_tvc"
        android:layout_width="450dp"
        android:layout_height="45dp"
        android:text="@string/str_project_name"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/make_line2"
        app:layout_constraintEnd_toStartOf="@+id/make_load_bt"
        app:layout_constraintStart_toEndOf="@+id/make_menu_bt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/tree_refresh_bt"
        style="@style/style_tree_bt"
        android:text="@string/str_refresh"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make_line2" />

    <Button
        android:id="@+id/tree_undo_bt"
        style="@style/style_tree_bt"
        android:text="@string/str_undo"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree_refresh_bt" />

    <Button
        android:id="@+id/tree_redo_bt"
        style="@style/style_tree_bt"
        android:text="@string/str_redo"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree_undo_bt" />

    <Button
        android:id="@+id/tree_up_bt"
        style="@style/style_tree_bt"
        android:text="@string/str_up"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree_redo_bt" />

    <Button
        android:id="@+id/tree_down_bt"
        style="@style/style_tree_bt"
        android:text="@string/str_down"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree_up_bt" />

    <Button
        android:id="@+id/tree_disable_bt"
        style="@style/style_tree_bt"
        android:text="@string/str_disable"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree_down_bt" />

    <Button
        android:id="@+id/tree_marking_bt"
        style="@style/style_tree_bt"
        android:text="@string/str_marking"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree_disable_bt" />

    <Button
        android:id="@+id/tree_search_bt"
        style="@style/style_tree_bt"
        android:text="@string/str_search"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tree_marking_bt" />

    <Button
        android:id="@+id/tree_copy_bt"
        style="@style/style_tree_bt2"
        android:layout_marginStart="3dp"

        android:text="@string/str_copy"
        app:layout_constraintStart_toEndOf="@+id/tree_search_bt"
        app:layout_constraintTop_toBottomOf="@+id/tree_view" />

    <Button
        android:id="@+id/tree_paste_bt"
        style="@style/style_tree_bt2"
        android:text="@string/str_paste"

        app:layout_constraintStart_toEndOf="@+id/tree_copy_bt"
        app:layout_constraintTop_toBottomOf="@+id/side_view" />

    <Button
        android:id="@+id/tree_cut_bt"
        style="@style/style_tree_bt2"
        android:text="@string/str_cut"

        app:layout_constraintStart_toEndOf="@+id/tree_paste_bt"
        app:layout_constraintTop_toBottomOf="@+id/side_view" />

    <Button
        android:id="@+id/tree_del_bt"
        style="@style/style_tree_bt2"
        android:text="@string/str_del"

        app:layout_constraintStart_toEndOf="@+id/tree_cut_bt"
        app:layout_constraintTop_toBottomOf="@+id/side_view" />

    <ToggleButton
        android:id="@+id/tree_ext_bt"
        style="@style/style_tree_bt2"
        android:text="@string/str_ext"
        android:textOff="@string/str_ext_off"
        android:textOn="@string/str_ext_on"

        app:layout_constraintStart_toEndOf="@+id/tree_del_bt"
        app:layout_constraintTop_toBottomOf="@+id/tree_view" />

    <LinearLayout
        android:id="@+id/tree_view"
        android:layout_width="450dp"
        android:layout_height="600dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/square_background_border"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/tree_refresh_bt"
        app:layout_constraintTop_toBottomOf="@+id/make_line2">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/side_view"
        android:layout_width="670dp"
        android:layout_height="600dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/square_background_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make_line2"/>

</androidx.constraintlayout.widget.ConstraintLayout>