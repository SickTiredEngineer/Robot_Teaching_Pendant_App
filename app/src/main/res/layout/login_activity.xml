<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style = "@style/bg">

    <View
        android:id="@+id/login_line1"
        style = "@style/line_horizon"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/login_line3"
        style = "@style/line_horizon"

        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/login_loading_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:scaleY="3"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/login_title"
        style = "@style/textview_center"
        android:text="@string/str_login"
        android:textSize="48sp"

        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_loading_bar"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/login_icon"
        android:background="@drawable/square_background_border"

        android:layout_width="161dp"
        android:layout_height="120dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="268dp"
        android:layout_weight="1"

        android:contentDescription="@string/str_login_ic"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@+id/login_line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title"
        app:srcCompat="@android:drawable/ic_lock_idle_lock"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/login_bt"
        style="@style/button"
        android:textSize="30sp"
        android:text="@string/str_login"

        android:layout_width="400dp"
        android:layout_height="144dp"
        android:layout_marginStart="400dp"

        android:layout_marginEnd="400dp"
        android:layout_marginBottom="30dp"

        app:layout_constraintBottom_toTopOf="@+id/login_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />

    <ImageButton
        android:id="@+id/login_power_bt"
        style = "@style/public_power_bt"
        android:contentDescription = "@string/power_bt"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off"/>

    <View
        android:id="@+id/login_line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="50dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="658dp"
        android:layout_height="120dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="311dp"
        android:layout_marginBottom="113dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/login_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_icon"
        app:layout_constraintTop_toBottomOf="@+id/login_line1">

        <EditText
            android:id="@+id/login_pw1"
            style = "@style/login_text_box"

            android:background="@drawable/square_background_border"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword|number"
            tools:ignore="Autofill,LabelFor" />

        <EditText
            android:id="@+id/login_pw2"
            style = "@style/login_text_box"
            android:background="@drawable/square_background_border"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword|number"
            tools:ignore="Autofill,LabelFor" />

        <EditText
            android:id="@+id/login_pw3"
            style = "@style/login_text_box"
            android:background="@drawable/square_background_border"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword|number"
            tools:ignore="Autofill,LabelFor" />

        <EditText
            android:id="@+id/login_pw4"
            style = "@style/login_text_box"
            android:background="@drawable/square_background_border"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword|number"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>