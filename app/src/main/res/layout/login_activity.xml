<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style = "@style/BG">

    <View
        android:id="@+id/login_line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/login_line3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/Gray"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/login_loading_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:scaleY="3"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"

        android:layout_height="83dp"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/login_title_text"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_loading_bar"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/login_icon"
        android:padding="2dp"
        android:background="@drawable/square_background_border_black"
        android:layout_width="161dp"
        android:layout_height="122dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="268dp"
        android:layout_weight="1"
        android:contentDescription="@string/login_icon_text"
        app:layout_constraintBottom_toTopOf="@+id/login_line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/ic_lock_idle_lock"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/login_bt"
        style="@style/BUTTON"
        android:layout_width="400dp"
        android:layout_height="144dp"
        android:layout_marginStart="400dp"
        android:gravity="center"

        android:layout_marginEnd="400dp"
        android:layout_marginBottom="30dp"

        android:text="@string/login_bt_text"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/login_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp"
        tools:ignore="VisualLintButtonSize" />

    <ImageButton
        android:id="@+id/login_power_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:contentDescription="@string/power_bt"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

    <View
        android:id="@+id/login_line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="50dp"
        android:background="@color/Gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>