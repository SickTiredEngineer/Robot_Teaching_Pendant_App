<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style= "@style/BG"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_make_bt"
        style="@style/BUTTON"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="220dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/main_make_bt_text"
        android:textSize="30sp"

        app:cornerRadius="0dp"

        app:layout_constraintBottom_toTopOf="@+id/main_play_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/main_play_bt"
        style="@style/BUTTON"

        android:layout_width="350dp"
        android:layout_height="150dp"

        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="3dp"

        android:text="@string/main_play_bt_text"
        android:textSize="30sp"
        app:cornerRadius="0dp"

        app:layout_constraintBottom_toTopOf="@+id/main_setup_bt"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/main_make_bt"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/main_setup_bt"

        style="@style/BUTTON"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"

        android:text="@string/main_setup_bt_text"
        android:textSize="30sp"
        app:cornerRadius="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_play_bt"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp" />


    <Button
        android:id="@+id/main_disconnect_bt"
        style="@style/public_disable_bt"

        android:layout_width="400dp"
        android:layout_height="70dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="328dp"
        android:layout_marginBottom="150dp"

        android:enabled="false"
        android:text="@string/main_disconnect_bt_text"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_setup_bt"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/main_connect_bt"
        app:layout_constraintVertical_bias="0.312"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/main_connect_bt"

        style="@style/public_enable_bt"
        android:layout_width="400dp"
        android:layout_height="70dp"

        android:layout_marginStart="20dp"

        android:layout_marginTop="584dp"
        android:layout_marginEnd="328dp"
        android:layout_marginBottom="2dp"
        android:text="@string/main_connect_bt_text"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/main_disconnect_bt"
        app:layout_constraintEnd_toStartOf="@+id/main_setup_bt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#C8C8C8"
        app:strokeWidth="2dp" />


    <TextView
        android:id="@+id/main_title"

        android:layout_width="460dp"
        android:layout_height="86dp"
        android:layout_marginStart="410dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="410dp"

        android:gravity="center"
        android:text="@string/main_title_text"

        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/main_dark_switch"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/dark_mode_switch"

        app:layout_constraintBottom_toTopOf="@+id/main_make_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/main_power_bt"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        android:contentDescription="@string/power_bt"/>

</androidx.constraintlayout.widget.ConstraintLayout>