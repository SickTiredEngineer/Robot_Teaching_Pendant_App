<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style= "@style/bg"
    tools:context=".MainActivity">

    <View
        android:id="@+id/setup_line6"
        style="@style/line_horizon"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_make_bt"
        style="@style/button"
        android:text="@string/main_make_bt"
        android:textSize="30sp"

        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="220dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintBottom_toTopOf="@+id/main_play_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/main_play_bt"
        style="@style/button"
        android:text="@string/main_play_bt"
        android:textSize="30sp"

        android:layout_width="350dp"
        android:layout_height="150dp"

        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="3dp"

        app:layout_constraintBottom_toTopOf="@+id/main_setup_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_make_bt" />

    <Button
        android:id="@+id/main_setup_bt"
        style="@style/button"
        android:text="@string/main_setup_bt"
        android:textSize="30sp"

        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_play_bt" />


    <TextView
        android:id="@+id/main_title"
        style = "@style/textview_center_2"
        android:text="@string/main_title"
        android:textSize="50sp"

        android:layout_width="460dp"
        android:layout_height="86dp"
        android:layout_marginStart="410dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="410dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/main_dark_switch"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/dark_mode_switch"

        app:layout_constraintBottom_toTopOf="@+id/main_make_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/main_power_bt"
        style = "@style/public_power_bt"
        android:contentDescription="@string/power_bt"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off" />


    <LinearLayout
        android:id="@+id/connect_viewer"
        android:layout_width="800dp"
        android:layout_height="480dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/square_background_border"
        app:layout_constraintBottom_toTopOf="@+id/setup_line6"
        app:layout_constraintEnd_toStartOf="@+id/main_make_bt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title"
        app:layout_constraintVertical_bias="0.0"
        android:orientation="vertical"
        android:gravity = "bottom|center">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>