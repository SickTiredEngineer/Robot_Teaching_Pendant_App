<?xml version="1.0" encoding="utf-8"?>
<resources>

    //Jog Increase Button -> 조그 UI의 ( + ) 버튼 모양
    <style name = "style_jog_inc">
        <item name = "android:text">+</item>
        <item name = "android:layout_width">50dp</item>
        <item name = "android:layout_height">25dp</item>
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:gravity">center</item>
    </style>

    //Jog Decrease Button -> 조그 UI의 ( - ) 버튼 모양
    <style name = "style_jog_dec">
        <item name = "android:text">-</item>
        <item name = "android:layout_width">50dp</item>
        <item name = "android:layout_height">25dp</item>
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:gravity">center|top</item>
    </style>

    <style name = "style_jog_view">
        <item name = "android:background">@drawable/square_background_border</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_height">25dp</item>
        <item name = "android:layout_width">90dp</item>
        <item name = "android:textSize">11sp</item>
    </style>

</resources>