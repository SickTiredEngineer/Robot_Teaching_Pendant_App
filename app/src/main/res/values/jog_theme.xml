<?xml version="1.0" encoding="utf-8"?>
<resources>

    //Jog Increase Button -> 조그 UI의 ( + ) 버튼 모양
    <style name = "style_jog_inc">
        <item name = "android:text">+</item>
        <item name = "android:layout_width">50dp</item>
        <item name = "android:layout_height">25dp</item>
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/color_text</item>
        <item name = "android:gravity">center</item>
    </style>

    //Jog Decrease Button -> 조그 UI의 ( - ) 버튼 모양
    <style name = "style_jog_dec">
        <item name = "android:text">-</item>
        <item name = "android:layout_width">50dp</item>
        <item name = "android:layout_height">25dp</item>
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/color_text</item>
        <item name = "android:gravity">center|top</item>
    </style>

    <style name = "style_jog_info">
        <item name = "android:textSize">11sp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/color_text</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">25dp</item>
    </style>

    //조그에서 현재 값을 나타내는 View의 스타일
    <style name = "style_jog_view">
        <item name = "android:background">@drawable/main_frame</item>
        <item name = "android:textColor">@color/color_text</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_height">25dp</item>
        <item name = "android:layout_width">90dp</item>
        <item name = "android:textSize">11sp</item>
    </style>

    //4가지 조그 모드(Global, User, Local, Joint) 를 선택할 때 사용하는 버튼의 스타일
    <style name = "style_jog_choice">
        <item name = "android:layout_height">84dp</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/color_text</item>
        <item name = "android:gravity">center</item>
    </style>

</resources>