<?xml version="1.0" encoding="utf-8"?>
<resources>

    //프로그램 트리 좌측에 위치한 버튼의 스타일
    <style name = "style_tree_bt">
        <item name = "android:layout_width">130dp</item>
        <item name = "android:layout_height">75dp</item>
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:gravity">center</item>
    </style>

    //프로그램 트리 하단에 위치한 버튼의 스타일
    <style name = "style_tree_bt2">
        <item name = "android:layout_width">90dp</item>
        <item name = "android:layout_height">75dp</item>
        <item name = "android:background">@drawable/public_button</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:gravity">center</item>
    </style>



    //Jog Mode 의 Tick 모드 사용 시
    <style name = "style_jogmode_edtx">
        <item name = "android:background">@drawable/square_background_border</item>
        <item name = "android:layout_width">55dp</item>
        <item name = "android:layout_height">30dp</item>
        <item name = "android:textColor">@color/main_black</item>
        <item name = "android:textSize">15sp</item>
        <item name = "android:gravity">center</item>
        <item name ="android:inputType">number</item>
    </style>


    <style name = "style_jogmode_tx">
        <item name = "android:layout_width">55dp</item>
        <item name = "android:layout_height">30dp</item>
        <item name = "android:textColor">@color/main_black</item>
        <item name = "android:textSize">11sp</item>
        <item name = "android:gravity">center</item>
    </style>




</resources>